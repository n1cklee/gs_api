<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @scale.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @scale.description %>
</p>

<% if !@items.blank? %>
	<table class="table">
		<thead>
			<tr>
				<th>Question</th>
				<th>Type</th>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @items.each do |item| %>
				<tr>
					<td><%= item.question %></td>
					<td><%= item.type %></td>
					<td><%= link_to 'Edit', edit_item_path(item) %></td>
					<td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>

<%= link_to 'Add New Question', new_scale_item_path(@scale) %> |
<%= link_to 'Edit', edit_scale_path(@scale) %> |
<%= link_to 'Back', scales_path %>
